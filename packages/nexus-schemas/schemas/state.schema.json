{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nexus-v6/schemas/state.json",
  "title": "NexusState",
  "description": "Machine-readable project state for Nexus V6",
  "type": "object",
  "required": ["version", "mission", "currentPhase", "loopPosition", "sessionContinuity"],
  "properties": {
    "version": { "type": "string" },
    "mission": { "type": "string" },
    "currentPhase": { "type": "string" },
    "currentPlan": { "type": "string" },
    "loopPosition": {
      "type": "string",
      "enum": ["pre-plan", "planning", "executing", "verifying", "unifying", "complete"]
    },
    "metrics": {
      "type": "object",
      "properties": {
        "phasesComplete": { "type": "integer" },
        "phasesTotal": { "type": "integer" },
        "tasksComplete": { "type": "integer" },
        "tasksTotal": { "type": "integer" },
        "scarsCount": { "type": "integer" }
      }
    },
    "decisions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "blockers": {
      "type": "array",
      "items": { "type": "string" }
    },
    "sessionContinuity": {
      "type": "object",
      "properties": {
        "lastUpdated": { "type": "string", "format": "date-time" },
        "nextAction": { "type": "string" },
        "handoffFile": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
